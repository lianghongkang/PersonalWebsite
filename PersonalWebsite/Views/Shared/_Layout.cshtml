<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Kong的网上花园</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>欢迎来到Kong's Website</h1>
        <p>我们的梦想是星辰大海</p>
    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Kong'Website</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li class="active"><a href='@Url.Action("Index","Home")'>主页</a></li>
                    <li><a href='@Url.Action("About","Home")'>关于我</a></li>
                    <li><a href="@Url.Action("PhotoWall","Home")">照片墙</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="jumbotron text-center" style="position:fixed;left:0px;bottom:0px;width:100%;height:50px;z-index:9999">
        <p>底部内容</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/vue");
    @RenderSection("scripts", required: false)
</body>
</html>
